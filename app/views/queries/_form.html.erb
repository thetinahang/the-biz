<%= form_for @query do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <h3>Query Terms:</h3>
  <%= f.fields_for :terms do |term| %>
    <%= term.collection_select :method, Term::TYPES, :to_s, :to_s %>
    Artist: <%= term.text_field :artist %><br>
    Track: <%= term.text_field :track %><br>
  <% end %>

  <%= f.submit %>
<% end %>
